<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black_trans80">

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="23dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/calendar"
                android:layout_width="76dp"
                android:layout_height="81dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@mipmap/ic_calendar" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="8dp"
                app:layout_constraintLeft_toRightOf="@+id/calendar"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:id="@+id/linearLayout">

                <TextView
                    android:text="-Celebracion de los maestr@s"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#706969"
                    android:id="@+id/textView7" />

                <TextView
                    android:text="-AplicaciÃ³n de Examenes"
                    android:textColor="#c4c4c4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView8" />

                <TextView
                    android:text="-Ultimo dia de Pago de Colegiatura"
                    android:layout_width="match_parent"
                    android:textColor="#706969"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView9" />

                <TextView
                    android:text="-Escuela de padres"
                    android:textColor="#c4c4c4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView10"
                    android:visibility="visible" />
            </LinearLayout>

            <TextView
                android:id="@+id/day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="10"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="normal|bold"
                app:layout_constraintBottom_toBottomOf="@+id/calendar"
                app:layout_constraintHorizontal_bias="0.47"
                app:layout_constraintLeft_toLeftOf="@+id/calendar"
                app:layout_constraintRight_toRightOf="@+id/calendar"
                app:layout_constraintTop_toTopOf="@+id/calendar"
                app:layout_constraintVertical_bias="0.58000004" />

            <TextView
                android:id="@+id/month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:fontFamily="sans-serif"
                android:text="SEPTIEMBRE"
                android:textColor="#FFFFFF"
                android:textSize="5sp"
                android:textStyle="normal|bold"
                app:layout_constraintBottom_toBottomOf="@+id/calendar"
                app:layout_constraintLeft_toLeftOf="@+id/calendar"
                app:layout_constraintRight_toRightOf="@+id/calendar"
                app:layout_constraintTop_toTopOf="@+id/calendar"
                app:layout_constraintVertical_bias="0.6"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018"
                android:textColor="#aae41414"
                android:fontFamily="sans-serif"
                android:textSize="6sp"
                app:layout_constraintRight_toRightOf="@+id/calendar"
                app:layout_constraintLeft_toLeftOf="@+id/calendar"
                app:layout_constraintBottom_toBottomOf="@+id/calendar"
                app:layout_constraintTop_toTopOf="@+id/calendar"
                app:layout_constraintVertical_bias="0.76"
                android:textAlignment="center"
                android:textStyle="normal|bold" />

            <TextView
                android:text="mas..."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/more"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="12sp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="16dp"
                app:layout_constraintVertical_bias="0.95"
                app:layout_constraintHorizontal_bias="0.98" />
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>