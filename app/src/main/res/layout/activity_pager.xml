<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".ui.onBoarding.PagerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/rectangule"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="0dp"
            android:background="@color/colorAccent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_below="@+id/rectangule"
            android:layout_marginLeft="-50dp"
            android:layout_marginRight="-50dp"
            android:layout_marginTop="-200dp"
            android:layout_weight="1"
            android:background="@drawable/ic_circle" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="?attr/actionBarSize"
        android:alpha="0.12"
        android:background="@android:color/white" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="?attr/actionBarSize"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/indicator_circle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible">


                <ImageView
                    android:id="@+id/intro_indicator_0"
                    android:layout_width="@dimen/size_indicator"
                    android:layout_height="@dimen/size_indicator"
                    android:layout_marginEnd="@dimen/activity_margin_half"
                    android:layout_marginRight="@dimen/activity_margin_half"
                    android:background="@drawable/indicator_unselected" />

                <ImageView
                    android:id="@+id/intro_indicator_1"
                    android:layout_width="@dimen/size_indicator"
                    android:layout_height="@dimen/size_indicator"
                    android:layout_marginEnd="@dimen/activity_margin_half"
                    android:layout_marginRight="@dimen/activity_margin_half"
                    android:background="@drawable/indicator_unselected" />

                <ImageView
                    android:id="@+id/intro_indicator_2"
                    android:layout_width="@dimen/size_indicator"
                    android:layout_height="@dimen/size_indicator"
                    android:layout_marginEnd="@dimen/activity_margin_half"
                    android:layout_marginRight="@dimen/activity_margin_half"
                    android:background="@drawable/indicator_unselected" />

                <ImageView
                    android:id="@+id/intro_indicator_3"
                    android:layout_width="@dimen/size_indicator"
                    android:layout_height="@dimen/size_indicator"
                    android:layout_marginEnd="@dimen/activity_margin_half"
                    android:layout_marginRight="@dimen/activity_margin_half"
                    android:background="@drawable/indicator_unselected" />

                <ImageView
                    android:id="@+id/intro_indicator_4"
                    android:layout_width="@dimen/size_indicator"
                    android:layout_height="@dimen/size_indicator"
                    android:layout_marginEnd="@dimen/activity_margin_half"
                    android:layout_marginRight="@dimen/activity_margin_half"
                    android:background="@drawable/indicator_unselected" />

                <ImageView
                    android:id="@+id/intro_indicator_5"
                    android:layout_width="@dimen/size_indicator"
                    android:layout_height="@dimen/size_indicator"
                    android:layout_marginEnd="@dimen/activity_margin_half"
                    android:layout_marginRight="@dimen/activity_margin_half"
                    android:background="@drawable/indicator_unselected" />

                <ImageView
                    android:id="@+id/intro_indicator_6"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="@dimen/size_indicator"
                    android:layout_height="@dimen/size_indicator"
                    android:background="@drawable/indicator_unselected" />
            </LinearLayout>

        </RelativeLayout>

    </FrameLayout>

    <TextView
        android:id="@+id/btn_continue"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="bottom"
        android:background="@drawable/ripple_effect"
        android:textSize="20dp"
        android:text="CONTINUAR"
        android:gravity="center"
        android:textColor="@color/button_text_continue" />

</android.support.design.widget.CoordinatorLayout>
