<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:paddingBottom="20dp"
        android:paddingTop="10dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        card_view:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_weekday"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_gravity="center|left"
                android:layout_marginLeft="-30dp"
                android:background="@color/colorPrimary"
                android:fontFamily="sans-serif"
                android:paddingLeft="0dp"
                android:rotation="-90"
                android:text="MIERCOLES"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="normal|bold"
                android:visibility="gone"
                tools:layout_editor_absoluteX="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp">

                    <ImageView
                        android:id="@+id/calendar"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:src="@drawable/ic_doc"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0" />

                    <TextView
                        android:id="@+id/tv_day_v2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="10"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="52sp"
                        android:textStyle="normal|bold"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@+id/calendar"
                        app:layout_constraintLeft_toLeftOf="@+id/calendar"
                        app:layout_constraintRight_toRightOf="@+id/calendar"
                        app:layout_constraintTop_toTopOf="@+id/calendar"
                        app:layout_constraintVertical_bias="0.0" />

                    <TextView
                        android:id="@+id/tv_month_v2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="SEPTIEMBRE"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="10sp"
                        android:textStyle="normal|bold"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@+id/calendar"
                        app:layout_constraintLeft_toLeftOf="@+id/calendar"
                        app:layout_constraintRight_toRightOf="@+id/calendar"
                        app:layout_constraintTop_toTopOf="@+id/calendar"
                        app:layout_constraintVertical_bias="0.83" />

                    <TextView
                        android:id="@+id/tv_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:layout_marginRight="3dp"
                        android:text="+1"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:visibility="visible"
                        android:textColor="#ba1a1a"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_bias="0.98"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.95" />

                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/calendar"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/tv_news_1_v2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="-Celebracion de los maestr@s"
                            android:textColor="#706969"
                            android:textStyle="bold"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/tv_news_2_v2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="-AplicaciÃ³n de Examenes"
                            android:textColor="#c4c4c4"
                            android:textStyle="bold"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/tv_news_3_v2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="-Ultimo dia de Pago de Colegiatura"
                            android:textColor="#706969"
                            android:textStyle="bold"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/tv_news_4_v2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="-Escuela de padres"
                            android:textColor="#c4c4c4"
                            android:textStyle="bold"
                            android:visibility="visible" />
                    </LinearLayout>

                </android.support.constraint.ConstraintLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:background="#42c9c9c9" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:text="Miercoles 1 Abr"
                    android:textColor="#d9c9c9c9"
                    android:textSize="10dp"
                    android:textStyle="italic" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>